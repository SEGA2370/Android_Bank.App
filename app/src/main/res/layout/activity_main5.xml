    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#121212"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/alif_fifth_page_id"
            android:layout_marginStart="240dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identification"
            android:textColor="#FFFFFF"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Limits"
            android:textColor="#7A7A7A"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            />

    </androidx.cardview.widget.CardView><!--Identification-->

    <RelativeLayout
        android:id="@+id/header_more_LimitQr"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256">

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="80dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#121212"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="MY      QR-code"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                />

            <ImageButton
                android:id="@+id/more_Qr_code"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/alif_fifth_page_qr"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="80dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#121212"
            android:layout_marginStart="200dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="LIMITS"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                />

            <ImageButton
                android:id="@+id/more_limits"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/alif_fifth_page_limits"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>  <!--5th-Page_Header-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        app:layout_constraintTop_toBottomOf="@+id/header_more_LimitQr"
        app:layout_constraintVertical_bias="0.229"
        tools:layout_editor_absoluteX="-16dp" /><!--Recycler View-->
    
    <Button
        android:id="@+id/logOut"
        android:layout_width="330dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#4E4E4E"
        android:text="Log Out"
        android:textSize="17sp"
        android:textColor="#FFFFFF"
        />

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#2D2D2D"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="40dp">

            <ImageButton
                android:id="@+id/toolbar_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/home_button_grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <ImageButton
                android:id="@+id/toolbar_transfer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/alif_toolbar_transfer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <ImageButton
                android:id="@+id/toolbar_history"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/alif_toolbar_history"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <ImageButton
                android:id="@+id/toolbar_loan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/alif_toolbar_loan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <ImageButton
                android:id="@+id/toolbar_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/more_button_green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textColor="#FFFFFF"
                android:textSize="15sp"/>


        </LinearLayout>

    </Toolbar><!--   Toolbar -->

</androidx.constraintlayout.widget.ConstraintLayout>