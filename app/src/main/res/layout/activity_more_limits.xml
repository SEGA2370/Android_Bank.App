<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreLimits">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#242426">

            <ImageButton
                android:id="@+id/more_back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Лимиты"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                />
        </LinearLayout><!--Heading-->

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="220dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#3C3F41">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кэшбэк за QR-оплату"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:text="5c"
                android:textStyle="bold"
                android:textColor="#22B600"/>
            <View
                android:layout_width="300dp"
                android:layout_height="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:background="#646768"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Израсходовано"
                    android:textColor="#646768"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="165dp"
                    android:text="Осталось"
                    android:textColor="#646768"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="90dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="0c."
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="270dp"
                    android:text="5c."
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
            
            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:background="#646768"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginStart="20dp"
                android:text="Кэшбэк в размере 1% вы поалучайте со всех покупок по QR. Его лимит -- 5 сомон в месяц. Все остальное кэшбэки от наших партнёров остаются безлимитными"
                android:textColor="#96999A"
                android:textSize="15sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="310dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#3C3F41">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Перевод с кошелька на карту"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:text="5000c"
                android:textStyle="bold"
                android:textColor="#22B600"/>
            <View
                android:layout_width="300dp"
                android:layout_height="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:background="#646768"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Израсходовано"
                    android:textColor="#646768"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="165dp"
                    android:text="Осталось"
                    android:textColor="#646768"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="90dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="0c."
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="250dp"
                    android:text="5000c."
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:background="#646768"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginStart="20dp"
                android:text="При переводе с кошелька на карту общей суммой более 5000 сомони в месяц, взимается комиссия в размере 0,5%"
                android:textColor="#96999A"
                android:textSize="15sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="520dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#3C3F41">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вывож средств с кошелька через кассы и терминалы Алифа"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:text="5000c"
                android:textStyle="bold"
                android:textColor="#22B600"/>
            <View
                android:layout_width="300dp"
                android:layout_height="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:background="#646768"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="80dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Израсходовано"
                    android:textColor="#646768"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="165dp"
                    android:text="Осталось"
                    android:textColor="#646768"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="0c."
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="250dp"
                    android:text="5000c."
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="130dp"
                android:layout_marginStart="20dp"
                android:background="#646768"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginStart="20dp"
                android:text="за снятие наличных более 5000 сомони в месяц, взимается в размере 0,7%"
                android:textColor="#96999A"
                android:textSize="15sp"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>