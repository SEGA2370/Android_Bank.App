<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transfer_Alifmobi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#242426">

            <ImageButton
                android:id="@+id/transfer_back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="На Карту"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                />
        </LinearLayout><!--Heading-->

        <EditText
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="30dp"
            android:hint="XXXX XXXX XXXX XXXX"
            android:textColorHint="#C1BEBE"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/transfer_card_camera"
            android:layout_marginTop="90dp"
            android:layout_marginStart="330dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="40dp"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#FFFFFF">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/baseline_star_outline_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Недавние"
                    android:textColor="#000000"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"

                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="40dp"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#232325">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/transfer_card_card"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="На Карту"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"

                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTransfer_alifmobi"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_marginTop="200dp"/>

        <Button
            android:id="@+id/transfer_alifmobi_next"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginTop="650dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="#4D4D4D"
            android:text="Продолжить"
            android:textColor="#C3B6B6"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>