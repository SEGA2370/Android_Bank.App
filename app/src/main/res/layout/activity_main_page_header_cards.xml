<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageHeaderCards">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#242426"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageButton
                    android:id="@+id/more_back_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/back_arrow"/>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:text="Карты"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Добавить"
                    android:textColor="#85A558"
                    android:textSize="20sp"
                    android:gravity="center"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:text="Валют"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#00000000"/>

                <Button
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:text="Конвертер"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#7B7F80"
                    android:backgroundTint="#00000000"/>


            </LinearLayout>

        </LinearLayout><!--Heading-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/main_cards_visa"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alif Platinum"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="444***VSA***1673"
                    android:textColor="#635C5C"
                    android:textSize="17sp"/>


            </LinearLayout>





        </LinearLayout><!--VISA-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/main_cards_mili"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALF**6075"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5058***VSA***6075"
                    android:textColor="#635C5C"
                    android:textSize="17sp"/>


            </LinearLayout>





        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="270dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#ECF1F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_cards_round"/>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:text="Закажите карту VISA прямо в приложение"
                    android:gravity="center"
                    android:textColor="#000000"/>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/baseline_arrow_forward_ios_24"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>