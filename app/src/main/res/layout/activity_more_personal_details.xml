<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MorePersonalDetails">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#242426">

            <ImageButton
                android:id="@+id/more_back_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/back_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Персональные данные"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:gravity="center"
                />
        </LinearLayout><!--Heading-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="80dp">

        </LinearLayout><!--Choose Photo-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Имя"
                android:textColor="#787676"
                android:layout_marginStart="30dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Сиёвуш"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="30dp"/>
            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#4E5051"/>


        </LinearLayout><!--Name-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="220dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Фамилия"
                android:textColor="#787676"
                android:layout_marginStart="30dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Дододжанов"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="30dp"/>
            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#4E5051"/>


        </LinearLayout><!--SurName-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="290dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Пол"
                android:textColor="#787676"
                android:layout_marginStart="30dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Мужской"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="30dp"/>
            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#4E5051"/>


        </LinearLayout><!--Gender-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="360dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Номер Телефона"
                android:textColor="#787676"
                android:layout_marginStart="30dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="+992 82 282 6969"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:layout_marginStart="30dp"/>
            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#4E5051"/>


        </LinearLayout><!--Phone-->

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>