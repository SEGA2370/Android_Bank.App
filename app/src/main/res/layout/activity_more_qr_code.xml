<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreQrCode"
    android:background="#00AE66">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="64dp"
                android:backgroundTint="#00AE66"
                android:src="@drawable/baseline_arrow_back_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="back Button" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My QR"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="160dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:text="Отсканируйте QR для совершения моментального перевода"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/qr_Code"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_marginStart="70dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#FFFFFF">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:src="@drawable/more_qrcode"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:backgroundTint="#13D585"
            android:text="Поделится"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>